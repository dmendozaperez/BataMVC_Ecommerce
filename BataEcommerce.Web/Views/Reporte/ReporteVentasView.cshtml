<div class="">
    <div class="page-title">
        <div class="title_left">
            <img src="@Url.Content("~/Images/reporte-icono.png")" alt="" class="pull-left" style="width:48px; height:48px;">
            <h2>@ViewBag.Title</h2>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <i class="fa fa-filter small icon-title"></i><h3>@ViewBag.SubTitle</h3>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="well">
                        <form id="frmConsulta" data-parsley-validate>
                            <div class="row">
                                <div class="form-group col-md-2">
                                    <label class="col-md-12 control-label" for="dtFechaDesde">Desde</label>
                                    <div class="col-md-12 xdisplay_inputx form-group has-feedback">
                                        <input type="text" name="dtFechaDesde" id="dtFechaDesde" class="form-control has-feedback-left" placeholder="dd/mm/yyyy" maxlength="10" data-parsley-minlength="10" data-parsley-minlength-message="Ingrese un formato de Fecha Correcta." readonly="readonly">
                                        <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                </div>
                                <div class="form-group col-md-2">
                                    <label class="col-md-12 control-label" for="dtFechaHasta">Hasta</label>
                                    <div class="col-md-12  xdisplay_inputx form-group has-feedback">
                                        <input type="text" name="dtFechaHasta" id="dtFechaHasta" class="form-control has-feedback-left" placeholder="dd/mm/yyyy" maxlength="10" data-parsley-minlength="10" data-parsley-minlength-message="Ingrese un formato de Fecha Correcta." readonly="readonly">
                                        <span class="fa fa-calendar-o form-control-feedback left" aria-hidden="true"></span>
                                    </div>
                                </div>
                                <div class="form-group col-md-2">
                                    <label class="control-label" for="selEstado">Estado</label>
                                    <select class="select2_single form-control" name="selEstado" id="selEstado"></select>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="txtCliente">Cliente</label>
                                    <input type="text" name="txtCliente" id="txtCliente" class="form-control" maxlength="255" data-parsley-maxlength="255" data-parsley-maxlength-message="Ingrese un nombre usuario válido.">
                                </div>
                            </div>
                            <div class="divider-dashed"></div>
                            <div class="row">
                                <div class="form-group col-md-3">
                                    <button type="submit" class="btn btn-success" name="btnConsultar" id="btnConsultar" onclick="MostrarReporte(event)">Consultar</button>
                                    <button type="submit" class="btn btn-default" name="btnLimpiar" id="btnLimpiar" onclick="Limpiar(event)">Limpiar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div id="ifrReporte" style="width: 100%; height: 100%;"></div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
@section ViewContent {
    @Styles.Render("~/Scripts/vendors/select2/dist/css/select2.min.css")
}
@section ViewScripts {
    @Scripts.Render("~/Scripts/vendors/select2/dist/js/select2.full.min.js")
    @Scripts.Render("~/Scripts/vendors/select2/dist/js/i18n/es.js")
    @Scripts.Render("~/Scripts/vendors/parsleyjs/dist/parsley.js")
    @Scripts.Render("~/Scripts/vendors/parsleyjs/dist/i18n/es.js")
    @Scripts.Render("~/Scripts/moment/moment.min.js")
    @Scripts.Render("~/Scripts/moment/locale/es.js")
    @Scripts.Render("~/Scripts/datepicker/daterangepicker.js")
    @Scripts.Render("~/Scripts/bata.app.reporteventas.js")
}
