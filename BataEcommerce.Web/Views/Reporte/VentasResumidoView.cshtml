<div class="">
    <div class="page-title">
        <div class="title_left">
            <img src="@Url.Content("~/Images/reporte-icono.png")" alt="" class="pull-left" style="width:48px; height:48px;">
            <h2>@ViewBag.Title</h2>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <i class="fa fa-filter small icon-title"></i><h3>@ViewBag.SubTitle</h3>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="well">
                        <form id="frmConsulta" data-parsley-validate>
                            <div class="row">
                                <div class="form-group col-md-2">
                                    <label class="control-label" for="txtAno">Año</label>
                                    <input type="text" name="txtAno" id="txtAno" class="form-control" maxlength="255" data-parsley-maxlength="255" data-parsley-maxlength-message="Ingrese un año válido." value="@DateTime.Now.Year.ToString()">
                                </div>
                                <div class="form-group col-md-2">
                                </div>
                                <div class="form-group col-md-2">
                                </div>
                                <div class="form-group col-md-6">
                                </div>
                            </div>
                            <div class="divider-dashed"></div>
                            <div class="row">
                                <div class="form-group col-md-3">
                                    <button type="submit" class="btn btn-success" name="btnConsultar" id="btnConsultar" onclick="MostrarReporte(event)">Consultar</button>
                                    <button type="submit" class="btn btn-default" name="btnLimpiar" id="btnLimpiar" onclick="Limpiar(event)">Limpiar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div id="ifrReporte" style="width: 100%; height: 100%;"></div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
@section ViewContent {
    @Styles.Render("~/Scripts/vendors/select2/dist/css/select2.min.css")
}
@section ViewScripts {
    @Scripts.Render("~/Scripts/vendors/select2/dist/js/select2.full.min.js")
    @Scripts.Render("~/Scripts/vendors/select2/dist/js/i18n/es.js")
    @Scripts.Render("~/Scripts/vendors/parsleyjs/dist/parsley.js")
    @Scripts.Render("~/Scripts/vendors/parsleyjs/dist/i18n/es.js")
    @Scripts.Render("~/Scripts/moment/moment.min.js")
    @Scripts.Render("~/Scripts/moment/locale/es.js")
    @Scripts.Render("~/Scripts/datepicker/daterangepicker.js")
    @Scripts.Render("~/Scripts/bata.app.reporteventasresum.js")
}
